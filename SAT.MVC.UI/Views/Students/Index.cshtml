@model IEnumerable<SAT.MVC.EF.Student>

@{
    ViewBag.Title = "Students";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="container">
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-success" })
        </p>
    }
    <table class="table table-striped table-responsive">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentStatus.SSName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/Content/img/studentPics/t_@item.PhotoUrl" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentStatus.SSName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.StudentId })

                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <span> | @Html.ActionLink("Edit", "Edit", new { id = item.StudentId })</span>
                    <span> | @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })</span>
                }
            </td>
        </tr>
        }

    </table>
</div>